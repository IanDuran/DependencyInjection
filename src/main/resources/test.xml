<root>

    <annotation-config/>
    <components-scan>
        <package base-package="com.ci1330.firstwork"/>>
    </components-scan>

    <beans>
        <bean id="student" class="com.ci1330.firstwork.Student" autowiring="byName"/>

        <bean id="teacher" scope="prototype" class="com.ci1330.firstwork.Teacher" autowiring="byName"/>

        <bean id="group" class="com.ci1330.firstwork.Group" autowiring="byType">
            <property name="student" ref="student"/>
            <property name="teacher" ref="teacher"/>
        </bean>
    </beans>
</root>